<p id="notice"><%= notice %></p>

<h1>Store Payment Methods</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Payment method</th>
      <th>Account parameters</th>
      <th>Account label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spree_store_payment_methods.each do |spree_store_payment_method| %>
      <tr>
        <td><%= spree_store_payment_method.store_id %></td>
        <td><%= spree_store_payment_method.payment_method_id %></td>
        <td><%= spree_store_payment_method.account_parameters %></td>
        <td><%= spree_store_payment_method.account_label %></td>
        <td><%= link_to 'Show', spree_store_payment_method %></td>
        <td><%= link_to 'Edit', edit_spree_store_payment_method_path(spree_store_payment_method) %></td>
        <td><%= link_to 'Destroy', spree_store_payment_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


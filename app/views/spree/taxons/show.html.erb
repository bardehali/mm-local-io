<% unless spree_current_user.try(:admin?)
  params.delete(:script_score_source)
  params.delete(:sort)
  params.delete(:text_fields)
  params.delete(:query_type)
end -%>
<div class="taxon" style="background-color: #fff;">
  <div class="container">
    <%= spree_breadcrumbs(@taxon) %>
    <%= render 'header', taxon: @taxon %>
  </div>
  <%= render 'subcategories', taxon: @taxon %>
  <div data-hook="taxon_products">
    <%= render template: 'spree/products/index', colors: @colors, sizes: @sizes %>
  </div>
</div>

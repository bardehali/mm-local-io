.star-rating-control {
  display: inline-block;
  height: 14px;
}

.review_hr {
  size: 1px;
  background: silver;
  border: none;
  margin: 1em 0;
}

.rating-cancel,
.star-rating,
.star-rating-readonly {
  float: left;
  width: auto;
  height: auto;
  margin-top: 0.2em;
  cursor: pointer;
  display: inline-block;
  font-size: 20px; /* Adjust size */
  line-height: 1;
  color: #ddd; /* Default empty star color */
}

.star-rating::before,
.star-rating-readonly::before {
  content: '☆'; /* Default empty star */
}

.star-rating-on::before {
  content: '★'; /* Filled star */
  color: #FBB113;
}

/* Hide radio buttons */
.star-rating input[type='radio'] {
  opacity: 0;
  position: absolute;
  width: 0;
  height: 0;
}

/* Change star on hover */
.star-rating:hover::before {
  content: '★';
  color: gold;
}

/* Readonly Stars */
.star-rating-readonly {
  cursor: default !important;
}


